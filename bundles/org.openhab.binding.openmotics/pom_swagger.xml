  <build>
    <plugins>
      <plugin>
        <groupId>io.swagger.codegen.v3</groupId>
        <artifactId>swagger-codegen-maven-plugin</artifactId>
        <version>3.0.22</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/src/main/resources/openmotics-api3.yaml</inputSpec>
              <language>java</language>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
              <apiPackage>org.openhab.binding.openmotics.internal.api</apiPackage>
              <modelPackage>org.openhab.binding.openmotics.internal.api.model</modelPackage>
              <invokerPackage>org.openhab.binding.openmotics.internal.api</invokerPackage>
              <configOptions>
                <sourceFolder>src/main/java</sourceFolder>
                <java8>true</java8>
                <dateLibrary>java8-localdatetime</dateLibrary>
                <useRuntimeException>true</useRuntimeException>
              </configOptions>
            </configuration>
          </execution>
        </executions>
